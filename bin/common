#!/bin/bash

STATIONIO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)/..";
export STATIONIO_DIR;

station_file() {
  echo "${STATIONIO_DIR}/stations/.stations/${1}";
}
station_exists() {
  if [ -f "$(station_file "${1}")" ]; then
    return 0;
  else
    return 1;
  fi
}
function is_docker_service_running() {
    local dcmd=(docker-compose)
    if [ "$2" != "" ]; then
      dcmd+=(-f "$compose_file")
    fi
    dcmd+=(ps -q "$1")
    local status=$("${dcmd[@]}")
    if [[ -n "$status" ]]; then
        return 0 # true
    else
        return 1 # false
    fi
}